extends layout

block contenido
    .contenido-principal
        if errores
            each error in errores
                .alerta= error.texto
        form.agregar-proyecto(action="/nuevo-registro" method="POST")
            .campo
                label(for="nombre") Registro
                input(type="text" id="nombre" name="nombre" placeholder="Nuevo registro")
            .campo.enviar
                input(type="submit" value="Agregar" class="boton")
